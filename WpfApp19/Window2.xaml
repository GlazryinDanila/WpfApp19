<Window x:Class="WpfApp19.Window2"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfApp19"
        mc:Ignorable="d"
        Title="Window2" Height="450" Width="800">
    <Grid>
        <TextBox HorizontalAlignment="Left" Margin="290,114,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="440" Height="30" Text="{Binding id}"/>
        <TextBox HorizontalAlignment="Left" Margin="290,179,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="440" Height="30" Text="{Binding Стоимость}"/>
        <TextBox HorizontalAlignment="Left" Margin="270,234,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="460" Height="30" Text="{Binding Бренд}"/>
        <TextBox HorizontalAlignment="Left" Margin="280,284,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="440" Height="30" Text="{Binding Адрес}"/>
        <TextBox HorizontalAlignment="Left" Margin="260,336,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="460" Height="33"  Text="{Binding Характеристики}"/>
        <Button Content="Button" HorizontalAlignment="Left" Margin="45,194,0,0" VerticalAlignment="Top" Height="158" Width="160" Click="Button_Click"/>

    </Grid>
</Window>
